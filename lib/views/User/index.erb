<div class="index-header">
	<div class="login">
		<form method="post" action="/login">
			<div class="password-signup">
				<p>
					<input class="login-email" type="text" name='email' placeholder="Email">
				</p>
				<p>	
					<input class="login-password" type="password" value="password" name="password">
					<input class="signin-btn" type="submit" value="Sign in" name="Sign in">
				</p>
				<div class="login-forgotpassword">
					<a href="/forgotten_password">Forgot your password?</a>
	 				<span class="dot-form">·</span>
	 				<span class="signup"><a href="/signup/new">Click here to sign up!</a></span>
	 			</div>
 			</div>
		</form>
	</div>
</div>

<ul>
<div class="cheets-heading">Cheets</div>

	<% @posts.each do |post| %>
	<div class="feed">			
		
		<div class="feed-header">
			<div class="nickname"><%= post.nickname %></div>
			<div class="name">@<%= post.name %></div> <span class="dot">·</span>
			<div class="time"><%= post.time.strftime("%A %H:%M") %></div>
		</div>
		<div class="feed-message"><%= post.message %>
	</div>	
</div>
	<% end %>
</ul>
