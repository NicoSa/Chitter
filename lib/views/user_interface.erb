<div id="new-post">
	<form action="/" method="post">
		<textarea cols="50" rows="4" name="message" maxlength="140"></textarea>
		<input type="submit" value="Post">
	</form>
</div>
<form action="/logout" method="post">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Sign out">
</form>
<ul>	
	<% begin %>
	<% @posts.each do |post| %>
	<br><li><%= post.message %><br>at:<%= post.time.strftime("%H:%M:%S - %A") %> by:<%= post.nickname %></li>
	<% end %>
	<% rescue %>
	something went wrong
	<% end %>
</ul>
